SECRET_KEY=your-secret-key-here
MONGODB_URI=mongodb+srv://user:password@cluster0.xxx.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
DATABASE_NAME=attendance_system
PORT=5001

# Auth (Admin login: admin@attendance.com / admin123 by default)
ADMIN_EMAIL=admin@attendance.com
ADMIN_PASSWORD=admin123
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRY_HOURS=24

# Image storage: local (required for LBPH). Relative to backend/ or absolute path.
# Leave empty for default: backend/TrainingImage, backend/TrainingImageLabel
TRAINING_IMAGE_PATH=TrainingImage
TRAINING_LABEL_PATH=TrainingImageLabel

# Face image quality (student upload)
MIN_FACE_SIZE=80
MIN_LAPLACIAN_VAR=80

# Continuous learning: save attendance face crops for retraining
SAVE_ATTENDANCE_FACES_FOR_TRAINING=true
MAX_ATTENDANCE_FACES_PER_STUDENT_PER_DAY=2
